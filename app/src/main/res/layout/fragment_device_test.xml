<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DeviceTestFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="听力测试需要佩戴耳机"
        android:gravity="center"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/iv_ear_check"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/dual_earphone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:id="@+id/ll_device_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/iv_ear_check"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/check_device_des1">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btn_dev_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备测试"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:background="@drawable/btn_bg_shape_green"/>

      <!--      <Button
                android:id="@+id/btn_stop_dev_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止测试"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:background="@drawable/btn_bg_shape_green"/>-->
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_enter_hear_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过听力练习，直接进入听力测试"
        android:textSize="18sp"
        android:textColor="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="@null"/>

    <Button
        android:id="@+id/btn_enter_hear_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入听力测试练习"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg_shape"/>



</RelativeLayout>